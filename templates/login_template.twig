{% extends "main_template.twig" %}

{% block head %}

    <style type="text/css">

        #Content form>  label{
            width: 212px;
        }



        #Content form > label{
            margin:0 44px;
        }

        #Content form > input{
            margin-left: 44px;
        }

        #Content form  > .notion{
            width: 212px;
            margin:20px auto;
        }

        #Content h1:nth-of-type(2){
            margin-top: 20px;
        }

    </style>

{% endblock %}
{% block content %}

    <section id="Content" class="content">
        <h1>
            Login
        </h1>
        <p>
            Is this your first rodeo? Then why not just trying username: <i>root</i> and password: <i>password</i>
        </p>
        <form id="UserLoginForm" method="post" action="#">
            {% page_element 'ChristianBudde\\Part\\view\\page_element\\LoginFormulaPageElementImpl' %}
            <label>
                Username
                <input type="text" name="username"/>
            </label>
            <label>
                Password
                <input type="password" name="password"/>
            </label>
            <input type="submit" value="Login"/>
        </form>

        <h1>
            Forgot password?
        </h1>
        <p>
            Forgot your password? Just type your email and we'll send you a new one!
        </p>
        <form id="UserForgotPasswordForm">
            <label>
                E-mail
                <input type="text" />
            </label>
            <input type="submit" value="Reset"/>
        </form>


    </section>

{% endblock %}